<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chasing_infinity.demo_app.MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="339dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="7dp"
        android:layout_marginVertical="20dp"
        android:background="#37ff00"
        android:fontFamily="@android:string/VideoView_error_text_invalid_progressive_playback"
        android:gravity="center"
        android:padding="20dp"
        android:text="My Great App"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_goneMarginTop="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickFuntion"
        android:text="Button"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="250dp" />

</android.support.constraint.ConstraintLayout>
